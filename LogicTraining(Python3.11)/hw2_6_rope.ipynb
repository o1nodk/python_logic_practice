   "source": [
    "# 將 rope 物件指向使用eval()接住的 繩子長度 回傳值\n",
    "rope = eval(input(\"請輸入繩子長度:\"))\n",
    "days = 0\n",
    "while rope >= 5:\n",
    "    rope /= 2\n",
    "    days += 1\n",
    "print(f\"繩子最後的長度為:{rope}公尺\\n花費的天數:{days}\")"
   ]
  }
